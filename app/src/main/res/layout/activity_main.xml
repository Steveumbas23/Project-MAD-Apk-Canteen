<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="410dp"
        android:layout_height="265dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-13dp"
        android:layout_marginEnd="1dp"
        android:src="@drawable/bg2" />

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/qr1"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="340dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="36dp"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/profile"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Steve"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llMenu"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="200dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/ftFood"
            android:layout_width="90dp"
            android:layout_height="78dp"
            android:backgroundTint="#D9D9D9"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/ivMakanan"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:src="@drawable/food"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/ftDrink"
            android:layout_width="90dp"
            android:layout_height="78dp"
            android:backgroundTint="#D9D9D9"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/ivMinuman"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/drink"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/ftDesert"
            android:layout_width="90dp"
            android:layout_height="78dp"
            android:backgroundTint="#D9D9D9"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/ivDesert"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/desert"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:id="@+id/tvRecommended"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Recommended"
        android:textColor="@color/black"
        android:layout_below="@+id/llMenu"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"/>

    <ScrollView
        android:layout_width="380dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/tvRecommended">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/Nasigoreng"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#D9D9D9"
                    tools:ignore="Orientation">

                    <ImageView
                        android:id="@+id/ivNasiGoreng"
                        android:layout_width="180dp"
                        android:layout_height="120dp"
                        android:src="@drawable/nasi_goreng"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="Nasi Goreng Cakalang"
                            android:textStyle="bold"
                            android:textSize="19dp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="120dp"
                            android:layout_marginTop="30dp"
                            android:text="Rp.17.000"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            tools:ignore="TextSizeCheck" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/nasiCampur"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/Nasigoreng"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#D9D9D9"
                    tools:ignore="Orientation">

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="120dp"
                        android:src="@drawable/nasi_campur" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="Nasi Campur"
                            android:textStyle="bold"
                            android:textSize="19dp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="120dp"
                            android:layout_marginTop="30dp"
                            android:text="Rp.15.000"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            tools:ignore="TextSizeCheck" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/ayamGeprek"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/nasiCampur"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#D9D9D9"
                    tools:ignore="Orientation">

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="120dp"
                        android:src="@drawable/ayamgeprek"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="Ayam Geprek"
                            android:textStyle="bold"
                            android:textSize="19dp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="120dp"
                            android:layout_marginTop="30dp"
                            android:text="Rp.20.000"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            tools:ignore="TextSizeCheck" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>